<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:background="@drawable/custom_khungcam"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginTop="17dp"
                android:backgroundTint="@color/orane"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/diadiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="7dp"
                    android:text="Phòng T314\n(Nhà T)"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/ngayhoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginLeft="132dp"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:text="19/08/2023 - Ca 4"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/monhoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginLeft="132dp"
                android:textColor="@color/black"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:text="Android Networking"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mamonhoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginLeft="132dp"
                android:textColor="@color/black"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="MOB402"
                android:textSize="15dp"
                android:textStyle="bold" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>